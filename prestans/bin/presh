import os
import sys
import shlex
import string
import signal
import getpass
import base64
import argparse

__VERSION__     = 1.0
__AUTHORS__     = ['Devraj Mukherjee <devraj@gmail.com>']

__history       = []

def process_presh_directive(presh_directive):
    print "Unrecognized wish"
 
## @brief
#   
def parse_command_options():

    arg_parser = argparse.ArgumentParser(
        description='command line interactive REST client',
        epilog='presh is distributed by the prestans project <http://prestans.googlecode.com> under the the New BSD license.'
    )

    arg_parser.add_argument(
        '-p', '--prestans-path',
        dest='prestans_path',
        required=True,
        help='path to the prestans python framework, required to introspect prestans models'
    )
    
    args = arg_parser.parse_args()
    return args

## @brief
#
def ctrlc_handler(signal, frame):
    print ""
    sys.exit(2)

## @brief
#
def main():
    
    args = parse_command_options()
    
    print "presh %s, by the prestans project <http://prestans.googlecode.com>" % __VERSION__
    signal.signal(signal.SIGINT, ctrlc_handler)

    while True:
        command_string = raw_input('presh> ')
        process_presh_directive(command_string)

if __name__ == "__main__":
    main()